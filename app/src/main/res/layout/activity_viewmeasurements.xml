<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/finish_screen_backdrop">

    <Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="60dip"
        android:background="@color/light_brown">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dip"
            android:layout_margin="5dip"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@drawable/fiddle_cursive_logo"/>

    </Toolbar>

    <TextView
        android:id="@+id/bust_measurement"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:fontFamily="sans-serif-light"
        android:textColor="@color/darker_brown"
        android:layout_below="@id/toolbar"
        android:gravity="center"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dip"
        android:text="Bust: 36"/>

    <TextView
        android:id="@+id/waist_measurement"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:fontFamily="sans-serif-light"
        android:textColor="@color/darker_brown"
        android:layout_below="@id/bust_measurement"
        android:gravity="center"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="75dip"
        android:text="Waist: 26"/>

    <TextView
        android:id="@+id/hip_measurement"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:fontFamily="sans-serif-light"
        android:textColor="@color/darker_brown"
        android:layout_below="@id/waist_measurement"
        android:gravity="center"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dip"
        android:text="Hip: 37"/>

    <ImageView
        android:id="@+id/cancel_action"
        android:layout_width="30dip"
        android:layout_height="30dip"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="10dip"
        android:layout_marginBottom="10dip"
        android:background="@drawable/orange_x"/>

    <ImageView
        android:id="@+id/email_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dip"
        android:background="@drawable/sendtoemailicon"/>

    <ImageView
        android:id="@+id/finished_check"
        android:layout_width="30dip"
        android:layout_height="30dip"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="10dip"
        android:layout_marginBottom="10dip"
        android:background="@drawable/checkmarkorange"/>

</RelativeLayout>