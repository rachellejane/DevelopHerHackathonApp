<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/peach_backdrop"
    android:layout_margin="10dip">

    <TextView
        android:id="@+id/info_tv"
        android:layout_margin="10dip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:fontFamily="sans-serif-light"
        android:textColor="@color/darker_brown"
        android:gravity="center"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:text="@string/email_instructions"/>

    <EditText
        android:id="@+id/message_input"
        android:layout_below="@id/info_tv"
        android:layout_margin="10dip"
        android:layout_centerHorizontal="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-light"
        android:textColor="@color/darker_brown"
        android:hint="name / customer information"/>

    <EditText
        android:id="@+id/email_input"
        android:layout_below="@id/message_input"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-light"
        android:textColor="@color/darker_brown"
        android:hint="vendor email"/>

</RelativeLayout>